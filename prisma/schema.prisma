// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

// Role: "CUSTOMER" | "ADMIN"
// OrderStatus: "PENDING" | "PRICED" | "IN_PROGRESS" | "REVISION" | "COMPLETED" | "CANCELLED"

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  password      String
  name          String?
  role          String    @default("CUSTOMER")
  orders        Order[]   @relation("CustomerOrders")
  comments      Comment[]
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model Order {
  id              String      @id @default(cuid())
  title           String
  description     String?
  status          String      @default("PENDING")
  price           Float?
  customerId      String
  customer        User        @relation("CustomerOrders", fields: [customerId], references: [id], onDelete: Cascade)
  files           File[]
  comments        Comment[]
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt
}

model File {
  id          String   @id @default(cuid())
  name        String
  url         String
  type        String   // 'original' | 'preview' | 'final'
  size        Int?     // dosya boyutu (bytes)
  orderId     String
  order       Order    @relation(fields: [orderId], references: [id], onDelete: Cascade)
  uploadedBy  String   // user id
  createdAt   DateTime @default(now())
}

model Comment {
  id        String   @id @default(cuid())
  content   String
  orderId   String
  order     Order    @relation(fields: [orderId], references: [id], onDelete: Cascade)
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
}
