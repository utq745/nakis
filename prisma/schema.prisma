// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

// Role: "CUSTOMER" | "ADMIN"
// OrderStatus: "PENDING" | "PRICED" | "IN_PROGRESS" | "REVISION" | "COMPLETED" | "CANCELLED"

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  emailVerified DateTime?
  password      String?
  name          String?
  image         String?
  role          String    @default("CUSTOMER")
  language      String    @default("en")
  accounts      Account[]
  sessions      Session[]
  orders        Order[]   @relation("CustomerOrders")
  comments      Comment[]
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model Account {
  id                 String  @id @default(cuid())
  userId             String
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String?
  access_token       String?
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String?
  session_state      String?
 
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
 
  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Order {
  id              String      @id @default(cuid())
  title           String
  description     String?
  status          String      @default("PENDING")
  price           Float?
  hidden          Boolean     @default(false)
  customerId      String
  customer        User        @relation("CustomerOrders", fields: [customerId], references: [id], onDelete: Cascade)
  files           File[]
  comments        Comment[]
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt
}

model File {
  id          String   @id @default(cuid())
  name        String
  url         String
  type        String   // 'original' | 'preview' | 'final' | 'comment'
  size        Int?     // dosya boyutu (bytes)
  orderId     String
  order       Order    @relation(fields: [orderId], references: [id], onDelete: Cascade)
  commentId   String?  // Optional: link to comment if file is attached to a message
  comment     Comment? @relation(fields: [commentId], references: [id], onDelete: SetNull)
  uploadedBy  String   // user id
  createdAt   DateTime @default(now())
}

model Comment {
  id        String   @id @default(cuid())
  content   String
  orderId   String
  order     Order    @relation(fields: [orderId], references: [id], onDelete: Cascade)
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  files     File[]   // Attached files
  isSystem  Boolean  @default(false) // System-generated messages (status changes, etc.)
  createdAt DateTime @default(now())
}

